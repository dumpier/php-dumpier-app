{
    "name": "dumpier/php-presto-app",
    "keywords": [ "framework", "presto", "app" ],
    "description": "The Presto Application.",
    "license": "MIT",

    "require": {
        "php": "^7.2",
        "dumpier/php-presto-framework": "dev-master",
        "monolog/monolog": "^1.24"
    },
    
    "require-dev": {
        "phpstan/phpstan": "^0.11.2",
        "phpunit/phpunit": "^8.0"
    },


    "repositories":[
        {"type": "vcs", "url": "https://github.com/dumpier/php-presto-framework.git"}
    ],

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },

    "autoload":{
        "files": [
            "helpers.php"
        ],
        "psr-4": {
            "Presto\\": "packages/presto/src/",
            "App\\": "app/classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "prefer-stable": true,
    "scripts": {
        "post-update-cmd": [
            "composer dump-autoload -o",
            "@php presto helper"
        ]
    }
}
